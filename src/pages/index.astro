---
import PokemonCard from "../components/PokemonCard.astro";
import MainLayout from "../layouts/MainLayout.astro";
import type { PokemonListResponse } from "../types/pokemon-list.response.ts";

const resp = await fetch("https://pokeapi.co/api/v2/pokemon");
const data = (await resp.json()) as PokemonListResponse;

const title = "PokémonStatic | Home";
---

<MainLayout title={title}>
  <h1 class="text-3xl text-blue-500">Listado de Pokémons</h1>
  <hr class="my-4" />
  <section class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
    {data.results.map((pokemon) => <PokemonCard pokemon={pokemon} />)}
  </section>
</MainLayout>
